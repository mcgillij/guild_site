<h1>New event</h1>
<% if logged_in? %>
<% form_for(@event) do |f| %>
  <%= f.error_messages %>
  <input type="hidden" name="event[user_id]" id="event_user_id" value="<%= session[:user_id] %>"/>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :rows => 10 %>
  </p>
  <p>
    <%= f.label :start_date %><br />
	<%= calendariffic_input(false, 'event[start_date]', 'calendariffic/date.png', 'event_start_date', '%Y-%m-%d %H:%M:%S UTC', nil, {:class => 'calendar-blue', :readonly => 'true'}, {:class => 'borderless'}) %>
  </p>
  <p>
    <%= f.label :length %><br />
    <%= f.text_field :length %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', events_path %>
<% else %>
Only logged in users can create events.
<% end%>