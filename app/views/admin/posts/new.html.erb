<h1>New post</h1>
<%= error_messages_for :post %>

<% form_for([:admin, @post]) do |f| %>
  <%= f.error_messages %>
  	<input id="post_user" name="post[user]" type="hidden" value="<%= session[:user_id] %>" />
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :rows => 10 %>
  </p>
  <p>
    <%= f.label 'check to make post public' %><br />
    <%= f.check_box :public_flag %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', admin_posts_path %>
