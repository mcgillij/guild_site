<h1>New Player</h1>
<%= error_messages_for :user %>
  <% form_for 'user', :url => users_path do |f| -%>
<p>
    <label for="login">
        Login
    </label>
    <br/>
    <%= f.text_field :login %>
</p>
<p>
    <label for="email">
        Email
    </label>
    <br/>
    <%= f.text_field :email %>
</p>
<p>
    <label for="password">
        Password
    </label>
    <br/>
    <%= f.password_field :password %>
</p>
<p>
    <label for="password_confirmation">
        Confirm Password
    </label>
    <br/>
    <%= f.password_field :password_confirmation %>
</p>
<p>
<label for="user_user_class">Please choose an class</label><br />
<%= select :user, :player_class, @player_classes  %>
</p>

<p>
<label for="user_avatar">Please choose an avatar (Click a picture)</label><br />
<input type="text" readonly="readonly" name="user[avatar]" id="user_avatar" value="">
</p>
<% i = 0 %>
<% @image_array.each do |file| %>
	<img id='<%= file %>' src="/images/avatars/<%= file %>"/ onclick="document.getElementById('user_avatar').value='<%= file %>';">
	<% if i == 11 %>
		<br/>
		<% i = 0 %>
	<% else %>
		<% i=i+1 %>
	<% end %>
<% end %>
<br/>
<p>
    <%= f.submit 'Create' %>
</p>
<% end -%>
  
<%= link_to 'Back', users_path %>

 
