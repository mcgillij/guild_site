<h1>New trophy</h1>
<% if logged_in? %>
<% form_for(@trophy) do |f| %>
  <%= f.error_messages %>
	<input type="hidden" name="trophy[user_id]" id="trophy_user_id" value="<%= session[:user_id] %>"/>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :rows => 10 %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>
<% else %>
You need to be logged in to create trophies.
<% end%>
<%= link_to 'Back', trophies_path %>
